<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/ResultsTextview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:inputType="none"
            android:paddingRight="30dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="45sp" />

        <EditText
            android:id="@+id/WorkingsTextview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:autofillHints="false"
            android:gravity="center_vertical"
            android:inputType="none"
            android:paddingRight="30dp"
            android:textAlignment="textEnd"
            android:textCursorDrawable="@null"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            tools:ignore="LabelFor" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="#000000"
                android:onClick="clear_btn"
                android:padding="35dp"
                android:text="C"
                android:textColor="#FF0000"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:onClick="paren_btn"
                android:padding="35dp"
                android:text="()"
                android:textColor="#00FF22"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:onClick="power_btn"
                android:padding="35dp"
                android:text="^"
                android:textColor="#00FF22"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:onClick="divide_btn"
                android:padding="35dp"
                android:text="@string/divide"
                android:textColor="#00FF22"
                android:textSize="@dimen/calButtonTextsize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="seven_btn"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="eight_btn"
                android:padding="35dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="nine_btn"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="multiply_btn"
                android:text="@string/multiply"
                android:textColor="#00FF22"
                android:textSize="@dimen/calButtonTextsize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="four_btn"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="five_btn"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="six_btn"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="plus_btn"
                android:text="@string/add"
                android:textColor="#00FF22"
                android:textSize="@dimen/calButtonTextsize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="one_btn"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="two_btn"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="three_btn"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="minus_btn"
                android:text="@string/minus"
                android:textColor="#00FF22"
                android:textSize="@dimen/calButtonTextsize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="dot_btn"
                android:padding="35dp"
                android:text="."
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="35dp"
                android:onClick="zero_btn"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/calButtonTextsize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="30dp"
                android:onClick="equal_btn"
                android:text="="
                android:textColor="#0055FF"
                android:textSize="37dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00100F0F"
                android:backgroundTint="#FFEB3B"
                android:onClick="backspace_btn"
                android:padding="35dp"
                app:srcCompat="@android:drawable/ic_input_delete"
                app:tint="#FFEB3B" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
